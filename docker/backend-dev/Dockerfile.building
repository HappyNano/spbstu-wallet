ARG REGISTRY_ID

FROM cr.yandex/${REGISTRY_ID}/backend-develop:latest

RUN apt-get update && apt-get install -y \
    ca-certificates \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /project

# Copy code
COPY . .

RUN mkdir -p build \
    && mv /project/vcpkg_installed build/

RUN cmake -B build -S . \
      -DPLATFORM=BACKEND \
      -DCMAKE_BUILD_TYPE=Release \
      -DBUILD_TESTING=ON \
      -DVCPKG_TARGET_TRIPLET=x64-linux \
    && cd build \
    && cmake --build . -j$(nproc)
