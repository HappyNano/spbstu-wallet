{
  "files.exclude": {
    "**/.git": true,
    "**/build": true,
    "**/.gitignore": true,
    "**/.cache": true,
    "**/.cxx": true,
    "**/.gradle": true,
    "**/gradlew": true,
    "scripts": true,
    ".gitmodules": true,
    ".gitattributes": true,
    ".editorconfig": true,
    ".clang-tidy": true,
    ".clang-format": true,
    "CMakeUserPresets.json": true,
  },
  "cmake.buildDirectory": "${workspaceFolder}/build",
  "cmake.parallelJobs": 11,
  "workbench.editor.wrapTabs": true,
  "clangd.fallbackFlags": [
    "-std=c++20"
  ]
}
